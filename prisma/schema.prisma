generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum OrderStatus {
  PENDING
  DELIVERED
  RETURNED
  CANCELLED
}

model Order {
  id              Int         @id @default(autoincrement())
  orderNumber     Int         @unique
  tracking        String      @unique
  trackingCompany String      @default("NO_COMPANY")
  customerName    String
  address         String
  productOrdered  String
  orderAmount     Float
  orderDate       DateTime
  status          OrderStatus @default(PENDING)
  courierStatus   String      @default("Booked")
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  remarks         String[]    @default([]) // Array of strings

  syncedWithShopify Boolean     @default(false)
  shopifySyncStatus OrderStatus @default(PENDING)
  shopifyLastSyncAt DateTime? // Track last successful sync time

  courierDeliveryCharge Float    @default(0) // <-- Add
  courierPaymentStatus  String   @default("Pending")
  courierPaid           Float    @default(0)
  statusesApplied       String[] @default([])

  rawPayload OrderPayload?
  items      OrderItem[]
}

model OrderPayload {
  id        Int      @id @default(autoincrement())
  orderId   Int      @unique
  data      Json // raw payload stored here
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model OrderItem {
  id          Int      @id @default(autoincrement())
  orderId     Int
  productName String
  quantity    Int      @default(1)
  price       Float
  discount    Float    @default(0)
  createdAt   DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}
